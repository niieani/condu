    "typescript": "5.8.2",
    "vite": "^6.2.0",
    "vitest": "^3.0.7",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "condu": {
    "managedDependencies": {
      "eslint-plugin-import-x": "presence",
      "@eslint/js": "presence",
      "prettier": "presence",
      "node-resolve-ts": "presence"
    }
  },
  "engines": {
    "node": "22.9.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@moonrepo/cli",
      "@swc/core"
